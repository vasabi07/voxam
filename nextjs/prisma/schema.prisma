generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id String @id @default(uuid())
  email String @unique
  name  String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents Document[]
  memberships InstitutionUser[]
  meetings Meeting[]
}

model Institution {
  id String @id @default(uuid())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents Document[]
  members InstitutionUser[]
}

model InstitutionUser {
  id String @id @default(uuid())
  userId String
  institutionId String
  role Role @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  institution Institution @relation(fields: [institutionId], references: [id])

  @@unique([userId, institutionId])
  @@index([institutionId])
  @@index([userId])
}

model Document {
  id String @id @default(uuid())
  title String
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  institution Institution? @relation(fields: [institutionId], references: [id])
  institutionId String?

  user User? @relation(fields: [userId], references: [id])
  userId String?

  @@index([institutionId])
  @@index([userId])
}

model Meeting {
  id String @id @default(uuid())
  title String
  agenda String?
  scheduledAt DateTime @default(now()) // When exam was created or scheduled for
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status MeetingStatus @default(SCHEDULED)
  
  // Question Paper/Exam fields
  documentId String
  duration Int // Duration in minutes
  numQuestions Int
  typeOfQp String // "regular", "midterm", "final", "quiz"
  mode String @default("exam") // "exam" or "learn"
  threadId String @unique @default(uuid()) // For tracking exam sessions
  qpId String? // ID from Python API response (stored in Redis)
  
  user User @relation(fields: [userId], references: [id])
  userId String
  
  @@index([userId])
  @@index([documentId])
  @@index([threadId])
  @@index([qpId])
}

enum Role {
  STUDENT
  ADMIN
}

enum MeetingStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}
